    <filter root="/conf/bt-sample-project"/>

    <!-- Content Pages -->
    <filter root="/content/bt-sample-project"/>

    <!-- Experience Fragments -->
    <filter root="/content/experience-fragments/bt-sample-project"/>

    <!-- Digital Assets -->
